<h3><%= title %></h3>
<br/>
<div class="row">
    <div class="col-lg-6">
        <form class="form-horizontal" role="form" name="updateAccount" action="/api/user/settings/update" method="post">
            <div class="form-group">
                <label class="col-sm-4 control-label">Email</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control" placeholder="Email" name='email' id='email' value=''>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Current Password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" placeholder="Current Password" name='passwordcheck' id='current_password'>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">New Password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" placeholder="New Password" name='password' id='new_password'>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Confirm New Password</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control" placeholder="Confirm New Password" name='passwordc' id='confirm_password'>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Mounts selection</label>
                <div class="col-sm-8 checkbox">
                    <label>
                        <input id='cbMountMultiselect' type="checkbox" value="false"> <span id="spMountsSelect">Single or Multiple</span>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button type="submit" class="btn btn-success submit" value='Update' id='btnUpdate'>Update</button>
                </div>
            </div>
        </form>
    </div>
</div>

