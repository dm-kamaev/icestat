<!doctype html>
<html>
    <head>
        <title><%= title %></title>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <link rel='stylesheet' href='/css/signin.min.css' id='strapcss'/>
        <link rel='stylesheet' href='/css/jumbotron_sign.min.css' id='strapcss'/>
        <link rel='stylesheet' href='/css/bootstrap/bootstrap.min.css' id='strapcss'/>
        <link rel='stylesheet' href='/css/bootstrap/bootstrap-theme.min.css' id='themecss'/>
        <link rel='stylesheet' href='/css/font-awesome.min.css' id='strapcss'/>
    </head>
    <body>
        <div class="container">

            <div class="header">
                <ul class="nav nav-pills navbar pull-right">
                    <li class="navitem-login"><a href="/"><span class="glyphicon glyphicon-log-in"><!----></span> Login</a></li>
                    <li class="navitem-register active"><a href="/signup"><span class="glyphicon glyphicon-user"><!----></span> Register</a></li></ul>
                <h3 class="text-muted"><img src="/images/logo_blue.png"/></h3>
            </div>
            <div class="jumbotron">
                <form name="newUser" class="form-horizontal" id="newUser" role="form" action="/signup" method="post">
                    <div class="row">
                        <div id="display-alerts" class="col-lg-12">
                            <!-- show any messages that come back with authentication -->
                            <% if (message.length > 0) { %>
                                <div class="alert alert-danger"><%= message %></div>
                            <% } %>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group ">
                                <label class="col-sm-4 control-label">Username</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-edit"></i></span>
                                        <input type="text" class="form-control" name="username" autocomplete="off" value="" placeholder="User name" data-validate="{&quot;minLength&quot;:1,&quot;maxLength&quot;:25,&quot;label&quot;:&quot;Username&quot;}" required autofocus>
                                    </div></div>
                            </div>
                        </div>
                    </div>
                    <!--div class="row">
                        <div class="col-sm-12">

                            <div class="form-group ">
                                <label class="col-sm-4 control-label">Display Name</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-edit"></i></span>
                                        <input type="text" class="form-control" name="display_name" autocomplete="off" value="" placeholder="Display name" data-validate="{&quot;minLength&quot;:1,&quot;maxLength&quot;:50,&quot;label&quot;:&quot;Display name&quot;}">
                                    </div></div>
                            </div>
                        </div>
                    </div-->
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group ">
                                <label class="col-sm-4 control-label">Email</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-envelope"></i></span>
                                        <input type="email" class="form-control" name="email" autocomplete="off" value="" placeholder="Email address" data-validate="{&quot;minLength&quot;:1,&quot;maxLength&quot;:150,&quot;email&quot;:true,&quot;label&quot;:&quot;Email&quot;}" required>
                                    </div></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group ">
                                <label class="col-sm-4 control-label">Password</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-key"></i></span>
                                        <input type="password" class="form-control" name="password" autocomplete="off" value="" pattern=".{8,50}" placeholder="8-50 characters" data-validate="{&quot;minLength&quot;:8,&quot;maxLength&quot;:50,&quot;label&quot;:&quot;Password&quot;,&quot;passwordMatch&quot;:&quot;passwordc&quot;}" required>
                                    </div></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group ">
                                <label class="col-sm-4 control-label">Confirm password</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-key"></i></span>
                                        <input type="password" class="form-control" name="passwordc" autocomplete="off" value="" pattern=".{8,50}" placeholder="Re-enter your password" data-validate="{&quot;minLength&quot;:8,&quot;maxLength&quot;:50,&quot;label&quot;:&quot;Password&quot;}" required>
                                    </div></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="form-group ">
                                <label class="col-sm-4 control-label">Confirm Security Code</label>
                                <div class="col-sm-8">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-fw fa-eye"></i></span>
                                        <input type="text" class="form-control" name="captcha" autocomplete="off" value="" placeholder="Enter the code below, human!" data-validate="{&quot;minLength&quot;:1,&quot;maxLength&quot;:50,&quot;label&quot;:&quot;Security code&quot;}">
                                    </div></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <!--img id="captcha"-->
                            <img src="/captcha.jpg" style="width:150px; height:60px;"/>
                        </div>
                    </div>
                    <br>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-success submit" value="Register">Register</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="footer">
                <p>&copy; RadioStatistica, 2016</p>
            </div>
        </div>
    </body>
</html>
